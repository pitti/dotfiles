[user]
	name = Philipp Ittershagen
	email = Philipp.Ittershagen@offis.de


[core]
	page = less -FRX
	editor = vim
	excludesfile = ~/.gitignore

[color]
	ui = auto

[color "branch"]
	current = yellow reverse
	local   = yellow
	remote  = green

[color "diff"]
	meta = cyan
	frag = magenta
	old  = yellow
	new  = blue

[color "status"]
	added     = magenta
	changed   = yellow
	untracked = red

[merge]
	tool = meld
	conflictstyle = diff3

[alias]
	ci = commit
	pa = push --all
	s = status -sb
	prune-all = !git remote | xargs -n 1 git remote prune
	gl = log --oneline --decorate --stat --graph
	lc = log ORIG_HEAD.. --stat --no-merges
	dc = diff --cached
	graphviz = "!f() { echo 'digraph git {' ; git-log --pretty='format: %h -> { \
		%p }'\"$@\" | sed 's/[0-9a-f][0-9a-f]*/\"&\"/g' ; echo '}'; }; f"
	svnpull = "!git svn fetch; git merge git-svn"
	lc = "!git reflog show | grep '}: commit' | nl | sort -nr | nl | sort -nr | \
	cut --fields=1,3 | sed s/commit://g | sed -e 's/HEAD*@{[0-9]*}://g'"
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	ff = merge --ff-only
	ff = merge --ff-only
	pullfrom = "!f() { reponame=$(basename $(git rev-parse --show-toplevel)); \
		git pull pg:/users/$1/$reponame.git ${@:2}; }; f"

[push]
	default = tracking

[branch]
	autosetupmerge = true
