# Deafult muttrc for all accounts.

set realname      = "Philipp Ittershagen"

set print_command = "/usr/bin/muttprint %s -p pdfprinter"

set mail_check = 10 # how often to check for new mail (s)
set timeout    = 5

set nomove     # Don't move messages from INBOX to mbox when read

set envelope_from

set sig_dashes="no"
set fast_reply   # go to reply message without prompting for To:
set sendmail_wait = -1 # dont't wait for mail to be sent

set sendmail = /usr/bin/msmtp

set askcc


set forward_format      = "Fwd: %s"            # format for subject when forwarding
set forward_decode                             # decode when forwarding
set attribution         = "On %d, %n wrote:"   # set the attribution

set reverse_name

set forward_quote


set postpone                 # Postpone messages withrout asking
set include                  # Include the message in replies
set delete=ask-yes           # Ask before doing a delete

set nomark_old               # Don't mark unread new msgs as old.

unset mime_forward           # Don't forward message as MIME attachments.


set header_cache     = ~/.mutt/cache/headers
set message_cachedir = ~/.mutt/cache/bodies
set certificate_file = ~/.mutt/certificates
set signature        = ~/.signature
set alias_file       = ~/.mutt/aliases

set edit_headers

set editor='vim +/^$ +/^$ -c"set hls" -c"noh"'

set smart_wrap = yes

set sort     = 'threads'
set sort_aux = 'reverse-last-date-received'

set noconfirmappend                       # Just append, don't hassle me.

set hidden_host                           # Hide host details.


# Header stuff

ignore *
unignore from: date subject to cc
unignore x-mailing-list: posted-to:
unignore x-mailer:

hdr_order Date From To Cc


# For better looks
set markers=no # don't put '+' at the beginning of wrapped lines
set pager_index_lines= 5 # how large is the index window?

set pager_stop  # dont go to next message automatically


alternative_order text/plain text/enriched text/html            # save html for last

bind editor <space> noop

macro index .n "<tag-pattern>~N<enter><tag-prefix><clear-flag>N<clear-flag>*<untag-pattern>*<enter>" "Catchup all new messages"
macro index .c "<change-folder>^<enter>" "Cleanup current folder"


set tilde

# bindings
bind pager i           exit
bind pager /           search
bind index,pager <up>        previous-entry
bind index,pager <down>      next-entry
bind pager k           previous-line
bind pager j           next-line
bind pager gg          top
bind pager G           bottom
bind index gg          first-entry
bind index G           last-entry
bind pager K           previous-undeleted
bind pager J           next-undeleted
bind index K           previous-unread
bind index J           next-unread
bind index,pager R     group-reply
bind index,pager <space> next-unread


macro index \Cr "<tag-prefix><clear-flag>N" "mark tagged messages as read"
macro index B   "<limit>~b "                "search message bodies"
macro index I   "<change-folder>!<enter>"   "go to Inbox"

macro index,pager <F1>   "<change-folder>=Inbox<enter>"


macro index T "<save-message>=todo<enter>"              # move message to todo-list


source ~/.mutt/aliases                    # Load in my aliases.
source ~/.mutt/colors                    # Load in my aliases.

source ~/.mutt/account-offis               # source offis as default

mailboxes =Inbox

set query_command = "lbdbq '%s'"

source /usr/share/doc/mutt/examples/gpg.rc

auto_view text/html


